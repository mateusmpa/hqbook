<h2>Edição de perfil</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-groups" id='information'>
    <label for="exampleInputFile">Foto de perfil</label>
    <%= f.file_field :avatar, type: :file, as: :file, id: 'exampleInputFile', html5: true %>
    <%= f.input :name, label: 'Nome completo:', autofocus: true %>
    <%= f.input :gender, label: 'Sexo:', as: :select, collection: User::GENDER %>
    <%= f.input :city, label: 'Cidade:' %>
    <%= f.input :country, label: 'País:' %>
    <%= f.input :birth_date, label: 'Data de nascimento:', as: :date, html5: true %>
    <%= f.input :email, label: 'Email:', required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: 'Senha:', autocomplete: "off", hint: "Deixe em branco se não for alterar.", required: false %>
    <%= f.input :password_confirmation, label: 'Confirmação de senha:', required: false %>
    <%= f.input :current_password, label: 'Senha atual:', hint: "Digite a senha atual para confirmar as alterações.", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar", class: "btn btn-primary" %>
  </div>
<% end %><br />
