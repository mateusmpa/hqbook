<div class='row'>
  <section id="series">
  <% @series_books.each do |series_book| %>
    <div class='col-md-4'>
        <div class='row'>
          <div class='col-md-6'>
            <p>
              <%= link_to series_book do %>
                <%= image_tag series_book.image.url(:medium), {class: "img-thumbnail"} %>
              <%end%>
            </p>
          </div>
          <div class='col-md-6'>
            <h4><%= link_to series_book.title, series_book %></h4>
            <dt>Editora</dt>
            <dd><%= series_book.publisher %></dd>
            <dt>Número de edições</dt>
            <dd><%= series_book.editions_number %></dd>
          </div>
        </div>
    </div>
  <% end %>
  </section>
</div>
